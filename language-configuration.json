{
  "autoCloseBefore": ";:.,=}])> \n\t",
  "folding": {
    "markers": {
      "start": "^\\s*\b(function|local\\s+function|if|for)\\b|{[ \\t]*$|\\[\\[",
      "end": "\\bend\\b|^\\s*}|\\]\\]"
    }
  },
  "comments": {
    "lineComment": "--",
    "blockComment": [ "--[[", "]]" ]
  },
  "brackets": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ]
  ],
  "autoClosingPairs": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "--[[", "close": "]]", "notIn": ["string", "comment"] },
    { "open": "/*", "close": " */", "notIn": ["string"] }
  ],
  // symbols that can be used to surround a selection
  "surroundingPairs": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "\"", "\"" ],
    [ "'", "'" ]
  ]
}
